<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="36dp">


    <ImageView
        android:id="@+id/host_message_input"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/im_text_icon" />

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/host_switch_cam"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/camera_change" />

    <ImageView
        android:id="@+id/host_camera_enable_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/camera_on" />

</LinearLayout>
